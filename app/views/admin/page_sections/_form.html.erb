    </tr>
      <td align="right" valign="middle">&nbsp;</td>
      <td align="left" valign="middle" class="tablelinks">
        <div class="greenbut" style="margin-left:0px;"><%= submit_tag 'SAVE', :class => "greensubbut"%></div>
        <div class="greenbut" style="margin-left:20px;"><%= link_to 'CANCEL', admin_page_sections_path %></div>	
        <div class="greenbut" style="margin-left:20px;">
          <%= link_to_function 'PREVIEW', "submitform('#{preview_admin_page_sections_path}')", :class => "thickbox" %></div>
      </td>
    </tr>
  </table> 
