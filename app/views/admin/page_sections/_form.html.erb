      <td align="right" valign="middle"  style="padding-right:9px;"><strong>Name:</strong></td>
      <td align="left" valign="middle" class="tablelinks"><label>
          <%= f.text_field "display_name", :class =>"text" %>
        </label>  
      </td>
    </tr>
    <tr>
      <td align="right" valign="middle"  style="padding-right:9px;"><strong>Title:</strong></td>
      <td align="left" valign="middle" class="tablelinks"><label>
          <%= f.text_field "title", :class =>"text" %>
        </label>  
      </td>
    </tr>
    <tr>
      <td align="right" valign="middle" style="padding-right:9px;"><strong>Code: </strong></td>
