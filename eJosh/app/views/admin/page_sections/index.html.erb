
<%= javascript_include_tag 'thickbox' %>
<div id = "wrapper">
  <%= render :partial => '/layouts/admin/top' %>
  <div id = "container">
    <%= render :partial => '/layouts/admin/category' %>
    <div id = "rightinner">
      <div id = "titlegreenleft">
        <div class="greentitle"><img src="/images/content.png" style="vertical-align:middle; margin-right:8px;" />Content Management</div>
      </div>
      <br/><br/>
      <div id = "matterinner" style="min-height:540px">
        <div id = "innerlinks">
          <span class="link"><%= link_to "Page Section" + get_help("section"), admin_page_sections_path, :class => "selected" %></span> |
          <span class="link"><%= link_to "Category" + get_help("category"), admin_categories_path %></span> |
          <span class="link"><%= link_to "Page" + get_help("page"), admin_pages_path %></span> 
        </div>
        <br/>
        <h3> Page Sections </h3>
        <br/>
        <%= render :partial => 'search'  %>  
        <br/>
        <table width="601" border="1" cellspacing="0" cellpadding="0" bordercolor="#c5c3c3">
          <tr>
            <th width="54" align="center" valign="middle">Sr. No.&nbsp;</td>
            <th width="210" align="center" valign="middle">Section Title </th>
            <th width="170" align="center" valign="middle">Preview</th>
            <th width="157" align="center" valign="middle">Action</th>
          </tr>
          <% for page_section in @page_sections %>
            <tr>
              <td align="center" valign="middle"><%= page_section.id %></td>
              <td align="center" valign="middle"><%= page_section.title %></td>
              <!--td align="center" valign="middle"><%#= page_section.page_section[0..100]%></td-->
              <td align="center" valign="middle"><%= link_to 'preview', admin_page_section_path(page_section), :class => "thickbox" %></td>
              <td align="center" valign="middle" class="tablelinks">
                <%= link_to 'Edit', edit_admin_page_section_path(page_section) %> |
                <%= link_to 'Delete', admin_page_section_path(page_section), :method => :delete %>
              </tr>
            <% end %>
          </table>
          <%= will_paginate @page_sections  %>  
          <br/>
          <div class="greenbut" style="margin-left:250px; _margin-left:120px;"><%= link_to 'Add New', new_admin_page_section_path %></div>
          <br/>
          <br/>


        </div>
        <div id = "rightinnerbottom"></div>
      </div>

      <div style="clear:both"></div>
    </div><br/><br/><br/>
  </div>
